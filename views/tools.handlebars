<p class="text-gray-200 text-4xl text-left gloria_font font-black px-16 p-2 leading-relaxed">Tools &amp; Cheatsheets</p>
<div class="container my-12 mx-auto px-4 md:px-12 ">
  <div class="flex flex-wrap -mx-1 lg:-mx-4">
    {{#if posts.length}}
    {{#each posts as |post|}}
    {{#if (check_if_equal category_name "tools")}}
    <div class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3">
      {{> post-info post}}
    </div>
    {{/if}}
    {{/each}}
    {{/if}}
  </div>
</div>