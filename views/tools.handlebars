<section>
    <h2>Tools &amp; Cheatsheets</h2>
    {{!-- {{>category-post posts}} --}}

    {{#if posts.length}}
        <ol class="post-list">
            {{#each posts as |post|}}
                {{#if (check_if_equal category_name "tools")}}
                    <li>
                        {{> post-info post}}
                    </li>
                {{/if}}
            {{/each}}
        </ol>
    {{/if}}

</section>
