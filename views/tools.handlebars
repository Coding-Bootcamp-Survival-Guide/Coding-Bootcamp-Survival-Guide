<p class="text-gray-200 text-4xl text-left gloria_font font-black md:px-16 mt-2 px-4 leading-relaxed">Tools &amp; Cheatsheets</p>
<div class="container mb-12 mt-2 mx-auto px-4 md:px-12 ">
  <div class="flex flex-wrap  md:-mx-4">
    {{#if posts.length}}
      {{#each posts as |post|}}
        {{#if (check_if_equal category_name "tools")}}
          <div class="mx-4 py-4 md:mx-0 md:py-0 w-full md:w-1/2 md:my-4 md:px-4 lg:w-1/3">
            {{> post-info post}}
          </div>
        {{/if}}
      {{/each}}
    {{/if}}
  </div>
</div>

<script> document.title = "Tools &amp; Cheatsheets" </script>
