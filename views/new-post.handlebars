<div class="container my-12 mx-auto px-4 md:px-12 ">
  <div class="flex flex-wrap -mx-1 lg:-mx-4">

    <!-- Column -->
    <div class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3">
      <p class="text-gray-200 text-4xl text-left gloria_font font-black px-16 p-2 leading-relaxed">Create a New Post</p>
    </div>
    <!-- END Column -->


    {{!-- <div> --}}
      <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="mt-5 md:mt-0 md:col-span-2">
          <form class="new-post-form" method="POST">
            <div class="shadow sm:rounded-md sm:overflow-hidden">
              <div class="px-4 py-5 bg-white space-y-6 sm:p-6">

                <div class="grid grid-cols-4 gap-6">
                  <div class="col-span-4 sm:col-span-2">
                    <label for="post-title" class="block text-sm font-medium text-gray-700">
                      Title
                    </label>
                    <div class="mt-1 flex rounded-md shadow-sm">
                      <input type="text" name="post-title" id="post-title"
                        class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300"
                        placeholder="Title of Post">
                    </div>
                  </div>
                </div>

                <div class="grid grid-cols-4 gap-6">
                  <div class="col-span-4 sm:col-span-2">
                    <label for="post-category" class="block text-sm font-medium text-gray-700">
                      Post Category
                    </label>
                    <div class="mt-1">
                      <select id="post-category" name="post-category" autocomplete="post-category" class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">                       
                        <option value="pick-camp">Picking a Bootcamp</option>
                        <option value="pre-course">Pre-Course Prep</option>
                        <option value="tools">Tools & Cheatsheets</option>
                        <option value="frontend">Front End</option>
                        <option value="backend">Back End</option>
                        <option value="self-care">Self Care</option>
                        <option value="finish-line">Finish Line</option>
                      </select>
                    </div>
                  </div>
                </div>

                <div class="grid grid-cols-4 gap-6">
                  <div class="col-span-4 sm:col-span-2">
                    <label for="post-url" class="block text-sm font-medium text-gray-700">
                      Post URL
                    </label>
                    <div class="mt-1 flex rounded-md shadow-sm">
                      <input type="text" name="post-url" id="post-url"
                        class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300"
                        placeholder="http://www.example.com">
                    </div>
                  </div>
                </div>
                <div class="grid grid-cols-4 gap-6">
                  <div class="col-span-4 sm:col-span-2">
                    <label for="post-image" class="block text-sm font-medium text-gray-700">
                      Image URL
                    </label>
                    <div class="mt-1 flex rounded-md shadow-sm">
                      <input type="text" name="post-image" id="post-image"
                        class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300"
                        placeholder="http://www.example.com">
                    </div>
                  </div>
                </div>
                <div class="grid grid-cols-4 gap-6">
                  <div class="col-span-4 sm:col-span-2">
                    <label for="post-text" class="block text-sm font-medium text-gray-700">
                      Post
                    </label>
                    <div class="mt-1">
                      <textarea id="post-text" name="post-text" rows="10"
                        class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border-gray-300 rounded-md"
                        placeholder="Text describing my post"></textarea>
                    </div>
                  </div>
                </div>


              </div>
              <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                <button class ="btn" type="submit"
                  class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                  Save
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
      {{!--
    </div> --}}
    <div class="hidden sm:block" aria-hidden="true">
      <div class="py-5">
        <div class="border-t border-gray-200"></div>
      </div>
    </div>

  </div>
</div>

<script src="/javascript/add-post.js"></script>