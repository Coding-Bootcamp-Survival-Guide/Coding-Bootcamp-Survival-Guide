<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
    <label for="post-category">Choose a category:</label>
      <select id="post-category" name="post-category">
        <option value="pick-camp">Pick a Bootcamp</option>
        <option value="pre-course">Pre-Course Prep</option>
        <option value="tools">Tools & Cheatsheets</option>
        <option value="frontend">Front End</option>
        <option value="backend">Back End</option>
        <option value="self-care">Self Care</option>
        <option value="finish-line">Finish Line</option>
      </select>
    </div>
    {{!-- <div>
      <label for="post-category">Category (1 = pick a camp, 2 = pre-course, 3 = tools, 4 = front-end, 5 = back-end, 6 = decompress)</label>
      <input id="post-category" name="post-category" />
    </div> --}}
    <div>
      <label for="post-url">Link</label>
      <input id="post-url" name="post-url" />
    </div>
    <div>
      <label for="post-image">Post Image URL</label>
      <input id="post-image" name="post-image" />
    </div>
    <div>
      <label for="post-text">Post</label>
      <textarea class="post-text" name="post-text" type="text"></textarea> 
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

