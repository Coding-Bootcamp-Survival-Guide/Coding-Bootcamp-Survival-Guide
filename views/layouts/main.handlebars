<body class="bg-indigo-900">

  <nav class="bg-indigo-900 h-auto">
    <div class=" mx-auto px-2 sm:px-2 lg:px-8 bg-gray-800 lg:py-4">
      <div class="relative flex items-center justify-between h-16 bg-gray-800">
        
        <div class="flex-1 flex items-left sm:items-stretch sm:justify-start bg-gray-800">
          <a href="/" aria-current="page">
          <div class="flex-shrink-0 flex items-center bg-gray-800 ">
            <img src="/assets/images/guide 32pxl.png" alt="logo" class="p-2 " />
            <span class="gloria_font text-gray-100 md:text-3xl text-lg py-2 hidden sm:block">Coding Bootcamp Survival Guide</span>
            <span class="gloria_font text-gray-100  text-lg py-2 sm:hidden">Bootcamp Survival Guide</span>
          </div>
          </a>
          <div class="sm:ml-6 bg-gray-800">
            <div class="flex space-x-4 items-center">
              
              <a href="/" class="bg-gray-900 hidden sm:block text-white hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" aria-current="page"><i
                  class="fas fa-home text-3xl"></i></a>

              <div class="hidden lg:block flex flex-row justify-between items-center m-1">
                
              <a href="/category/pick-camp"
                class="text-gray-300 hover:bg-indigo-800  hover:text-white px-3 py-2 rounded-md text-sm font-medium">Pick a
                Camp</a>

              <a href="/category/pre-course"
                class="text-gray-300 hover:bg-indigo-800 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Pre-Course
                Help</a>

              <a href="/category/tools"
                class="text-gray-300 hover:bg-indigo-800 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Tools
                & Cheatsheets</a>

              <a href="/category/frontend"
                class="text-gray-300 hover:bg-indigo-800 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Front-End
                Design</a>

              <a href="/category/backend"
                class="text-gray-300 hover:bg-indigo-800 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Back-End
                Design</a>

              <a href="/category/self-care"
                class="text-gray-300 hover:bg-indigo-800 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Self
                Care</a>

              <a href="/category/finish-line"
                class="text-gray-300 hover:bg-indigo-800 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Finish
                Line!</a>
              </div>
            </div>
          </div>
        </div>


        <!-- Profile dropdown -->
        <div
          class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0 bg-gray-800">
          <!-- Profile dropdown -->
          <div class="ml-3 relative bg-gray-800">
            <div>
              <button type="button"
                class="bg-gray-800 flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white"
                @click="open = !open" id="user-menu" aria-expanded="false" aria-haspopup="true">
                <span class="sr-only">Open user menu</span>
                {{#if loggedIn}}
                <img class="h-8 w-8 rounded-full" src="{{profilePic}}" alt="User Profile">
                {{else}}
                <img class="h-8 w-8 rounded-full" src="/assets/images/user.png" alt="User Profile">
                {{/if}}
              </button>
            </div>
            <!--
              Dropdown menu, show/hide based on menu state.
              Entering: "transition ease-out duration-100"
                From: "transform opacity-0 scale-95"
                To: "transform opacity-100 scale-100"
              Leaving: "transition ease-in duration-75"
                From: "transform opacity-100 scale-100"
                To: "transform opacity-0 scale-95"
            -->
            <div id="drop-down" style="display:none"
              class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
              role="menu" aria-orientation="vertical" aria-labelledby="user-menu">
              {{#if loggedIn}}
              {{#if isAdmin}}
              <a href="/dashboard/admin" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Your Profile</a>
              <a href="/dashboard/new" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Create a New Post</a>
              <a href="/category/pick-camp" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Pick a Camp</a>
              <a href="/category/pre-course" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Pre-Course</a>
              <a href="/category/tools" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Tools</a>
              <a href="/category/frontend" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Front-End</a>
              <a href="/category/backend" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Back-End</a>
              <a href="/category/self-care" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Self-Care</a>
              <a href="/category/finish-line" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Finish-Line!</a>
              {{else}}
              <a href="/dashboard" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Your
                Profile</a>
              <a href="/category/pick-camp" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Pick a Camp</a>
              <a href="/category/pre-course" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Pre-Course</a>
              <a href="/category/tools" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Tools</a>
              <a href="/category/frontend" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Front-End</a>
              <a href="/category/backend" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Back-End</a>
              <a href="/category/self-care" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Self-Care</a>
              <a href="/category/finish-line" class="xl:hidden block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                role="menuitem">Finish-Line!</a>

              {{/if}}
              <button id='logout' class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Sign
                out</button>
              {{else}}
              <a href="/login" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Sign
                in</a>
              {{/if}}
            </div>
          </div>
        </div>
        {{!-- END Profile drop down --}}

      </div>
    </div>
  </nav>

  <!-- end nav bar -->

  <main>
    {{{ body }}}
  </main>
