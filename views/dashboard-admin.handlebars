{{#if isAdmin}}
  <section>
    <h2 class="post-new"><a href="/dashboard/new/">Create a New Post</a></h2>
  </section>
  <div class="container my-12 mx-auto px-4 md:px-12 ">
    <div class="flex flex-wrap -mx-1 lg:-mx-4">

      {{#if posts.length}}
        {{#each posts as |post|}}
          {{> post-info post}}
          {{!-- <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a> --}}
        {{/each}}
      {{/if}}
    </div>
  </div>
{{/if}}
