{{#if isAdmin}}
  
  {{!-- <section>
    <a href="/dashboard/new"><h2 class="post-new"></h2>Create a New Post</h2></a>
  </section> --}}
  <div class="md:px-20 p-4">
    <button class="inline-flex justify-center py-2 px-4 border border-transparent shadow-2xl text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" 
      onclick="location.href='/dashboard/new'">
      Create a New Post
    </button>
  </div>

  <div class="container mb-12 mt-2 mx-auto px-4 md:px-12  ">
    <div class="flex flex-wrap  md:-mx-4">

      {{#if posts.length}}
        {{#each posts as |post|}}
        <div class="mx-4 py-4 md:mx-0 md:py-0 w-full md:w-1/2 md:my-4 md:px-4 lg:w-1/3">
          {{> post-info post}}
          {{!-- <a class="edit-link" href="/dashboard/edit/{{post.id}}" >Edit post</a>  --}}
            <div class="py-4">
              <button class="inline-flex justify-center py-2 px-4 border border-transparent shadow-2xl text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" 
                onclick="location.href='/dashboard/edit/{{post.id}}'">
                Edit Post
              </button>
            </div>

        </div>
        {{/each}}
      {{/if}}

    </div>
  </div>

{{/if}}

<script> document.title = "Admin Dashboard" </script>
