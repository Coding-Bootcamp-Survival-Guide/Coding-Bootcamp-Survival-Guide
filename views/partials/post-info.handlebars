  <!-- Article -->
  <article class="overflow-hidden rounded-lg shadow-2xl bg-gray-800 text-gray-200">
    <a href="{{post_url}}" target="_blank" >
      <img alt="Placeholder" class="block h-auto w-full max-w-xl max-h-96" src="{{post_image}}" />
    </a>

    <header class="flex items-center justify-between leading-tight p-2 md:p-4">
      <h1 class="text-lg">
        <a class="no-underline hover:underline font-bold text-2xl raleway_font" href="/post/{{id}}">
          {{title}}
        </a>
      </h1>
      <p class="text-grey-darker text-2xl raleway_font">{{format_date created_at}}</p>
    </header>
    <footer class="flex items-center justify-between leading-none p-2 md:p-4">
      <a class="flex items-center no-underline hover:underline text-black" href="/post/{{id}}">
        <img alt="Placeholder" class="block rounded-full h-8 w-8" src="{{user.profile_pic}}" />
        <p class="ml-2 text-xl nothing_font font-black text-gray-400">
          {{user.username}}</p>
      </a>
      <a class="no-underline text-grey-darker hover:underline" href="/post/{{id}}">
        <span class="raleway_font text-gray-400">
          {{likes.length}} {{format_plural "like" likes.length}} <i class="fas fa-heart text-red-700"></i>
          |
          {{comments.length}} {{format_plural "comment" comments.length}}
        </span>
      </a>
    </footer>   

  </article>
  <!-- END Article -->
